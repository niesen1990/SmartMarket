<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/rl_wait"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_red_single_line"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/half_global_padding"
    android:paddingLeft="@dimen/global_padding"
    android:paddingRight="@dimen/global_padding"
    android:paddingTop="@dimen/half_global_padding">

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableBottom="@drawable/shape_color_circle"
        android:gravity="center"
        android:text="待付款"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="2015-03-24 10:15"
        android:textSize="12sp"/>

</LinearLayout>


