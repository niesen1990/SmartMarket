<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_head_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_head02"
            android:layout_toRightOf="@+id/iv_head02"
            android:background="@drawable/shape_color_stroke_corner"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/half_global_padding"
            android:paddingRight="@dimen/half_global_padding"
            android:paddingTop="2dp"
            android:text="求购"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"/>


        <TextView
            android:id="@+id/tv_head_zan_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:lines="1"
            android:text="骄傲节是的发健康的是的就发空间是发的"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_head_xin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_head02"
            android:layout_toRightOf="@+id/iv_head02"
            android:background="@drawable/shape_color_stroke_corner"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/half_global_padding"
            android:paddingRight="@dimen/half_global_padding"
            android:paddingTop="2dp"
            android:text="求购"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_head_xin_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:lines="1"
            android:text="骄傲节是的发健康的是的就发空间是发的"/>
    </LinearLayout>

</LinearLayout>