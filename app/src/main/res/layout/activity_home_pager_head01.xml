<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:id="@+id/head01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_stroke_no_corner"
        android:orientation="horizontal"
        android:padding="@dimen/global_padding">

        <TextView
            android:id="@+id/tv_guanfangtuijian"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/half_global_padding"
            android:drawableTop="@drawable/ic_office_recommend"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/home_head_tuijian"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_baobaoyongping"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/half_global_padding"
            android:drawableTop="@drawable/ic_baby_recommend"
            android:gravity="center"
            android:text="@string/home_head_baobao"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_mamashangping"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/half_global_padding"
            android:drawableTop="@drawable/ic_mami_recommend"
            android:gravity="center"
            android:text="@string/home_head_mama"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_jujiashangping"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/half_global_padding"
            android:drawableTop="@drawable/ic_house_recommend"
            android:gravity="center"
            android:text="@string/home_head_jujia"
            android:textSize="12sp"
            android:textStyle="bold"/>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/head02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head01"
        android:background="@drawable/shape_white_stroke_no_corner"
        android:padding="@dimen/global_padding">

        <ImageView
            android:id="@+id/iv_head02"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:src="@drawable/ic_home_qiugou"/>

        <AdapterViewFlipper
            android:id="@+id/adapterViewFlipper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_head02"
            android:layout_toRightOf="@+id/iv_head02"
            android:flipInterval="3000"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head02"
        android:padding="@dimen/global_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_new_store_tag"
            android:background="@color/darkgray"/>

        <TextView
            android:id="@+id/tv_new_store_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:text="最新商品"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_new_store_tag"
            android:background="@color/darkgray"/>
    </RelativeLayout>

</RelativeLayout>