<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/ll01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_stroke_no_corner"
        android:orientation="vertical"
        android:padding="@dimen/global_padding">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_color_solid_corner"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingLeft="@dimen/half_global_padding"
                android:paddingRight="@dimen/half_global_padding"
                android:paddingTop="2dp"
                android:text="官方推荐"
                android:textColor="@android:color/white"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/global_padding"
                android:layout_weight="3"
                tools:text="贝亲新生婴儿清洁护肤礼品"/>

            <TextView
                android:id="@+id/tv_watch_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_browse"
                android:gravity="center"
                tools:text="2106"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll01"
            android:layout_marginTop="@dimen/global_padding">

            <TextView
                android:id="@+id/tv_real_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="￥128"/>

            <TextView
                android:id="@+id/tv_old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/global_padding"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/tv_real_price"
                android:background="@drawable/shape_gray_single_line"
                android:textSize="12sp"
                tools:text="￥128"/>

            <TextView
                android:id="@+id/tv_freight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/tv_old_price"
                android:textSize="12sp"
                tools:text="(已含运费)"/>

            <TextView
                android:id="@+id/tv_introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_real_price"
                android:layout_marginTop="@dimen/global_padding"
                tools:text="洗护全套，送宝宝的好礼品。（爽身粉）140g,洗发精200ml，沐浴露200ml, 论腐乳300ml"/>


            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_introduce"
                android:layout_marginTop="@dimen/global_padding"
                tools:text="6小时以前"/>

            <TextView
                android:id="@+id/tv_line01"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_time"
                android:layout_marginTop="@dimen/half_global_padding"
                android:background="@color/line"/>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_line01"
                android:layout_marginTop="@dimen/global_padding"
                android:drawableLeft="@drawable/ic_location"
                android:gravity="center"
                android:textColor="@color/address"
                android:textSize="10sp"
                tools:text="上海 | 杨浦区"/>


        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll01"
        android:layout_marginBottom="@dimen/half_global_padding"
        android:layout_marginTop="@dimen/half_global_padding"
        android:background="@drawable/shape_white_stroke_no_corner"
        android:padding="@dimen/global_padding">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="32dp"
            android:layout_height="32dp"
            tools:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_toRightOf="@+id/iv_head"
            tools:text="niesen918"/>

        <TextView
            android:id="@+id/tv_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_contact"
            android:gravity="center"
            android:text="联系卖家"/>

        <TextView
            android:id="@+id/tv_line"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_head"
            android:layout_alignTop="@+id/iv_head"
            android:layout_centerVertical="true"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="@dimen/global_padding"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@+id/tv_contact"
            android:background="@color/line"/>

    </RelativeLayout>

</RelativeLayout>