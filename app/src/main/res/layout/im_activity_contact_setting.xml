<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".im.custom.ContactSettingActivity">

    <include
        android:id="@+id/title_self_state"
        layout="@layout/aliwx_title_self_state" />

    <RelativeLayout
        android:id="@+id/contact_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:padding="20dp">

        <com.alibaba.mobileim.fundamental.widget.WXNetworkImageView
            android:id="@+id/head"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/aliwx_head_default" />

        <TextView
            android:id="@+id/contact_show_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="测试"
            android:textColor="@color/aliwx_white"
            android:textSize="@dimen/aliwx_font_first_grade" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/aliwx_column_top_margin"
        android:background="@color/line" />

    <RelativeLayout
        android:id="@+id/receive_msg_remind_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/shape_white_stroke_no_corner"
        android:padding="@dimen/global_padding">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="是否提醒" />


        <Switch
            android:id="@+id/receive_msg_remind_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:checked="true"
            android:text="" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/aliwx_column_top_margin"
        android:background="@color/line" />

    <RelativeLayout
        android:id="@+id/clear_msg_record"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/shape_white_stroke_no_corner"
        android:padding="@dimen/global_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="清空聊天记录" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line" />

</LinearLayout>
