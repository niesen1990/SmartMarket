<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_stroke_no_corner"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="@dimen/global_padding">


    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_head_default"/>

    <TextView
        android:id="@+id/tv_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_head"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_toEndOf="@+id/iv_head"
        android:layout_toRightOf="@+id/iv_head"
        tools:text="niesen918"/>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        tools:text="状态"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_head"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_toEndOf="@+id/iv_head"
        android:layout_toRightOf="@+id/iv_head"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/darkgray"
        android:textSize="12sp"
        tools:text="5小时之前"/>


    <TextView
        android:id="@+id/tv_title"
        style="@style/TextAppearance.Smart.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_head"
        android:layout_marginTop="@dimen/global_padding"
        android:maxLines="2"
        android:textColor="@color/dimgray"
        tools:text="[求购]贝亲新生儿护肤礼盒"/>


    <LinearLayout
        android:id="@+id/ll_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="@dimen/global_padding"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv01"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@color/line"/>

        <ImageView
            android:id="@+id/iv02"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginLeft="@dimen/half_global_padding"
            android:layout_marginRight="@dimen/half_global_padding"
            android:layout_weight="1"
            android:src="@color/line"/>

        <ImageView
            android:id="@+id/iv03"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@color/line"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_images"
        android:layout_marginTop="@dimen/half_global_padding"
        android:maxLines="2"
        android:textColor="@color/darkgray"
        tools:text="就是当减肥sdjfoijsdjfpoiwjefwoiejfsjdf;ajsjdf;ajfjd;ajf时代科技分"/>


    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_content"
        android:layout_marginTop="@dimen/half_global_padding">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_location"
            android:gravity="center"
            android:textColor="@color/address"
            android:textSize="10sp"
            tools:text="来自上海市 虹口区 大连路"/>

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_message"
            android:gravity="center"
            android:textSize="10sp"
            tools:text="40"/>

        <TextView
            android:id="@+id/tv_watch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/global_padding"
            android:layout_toLeftOf="@+id/tv_message"
            android:drawableLeft="@drawable/ic_browse"
            android:gravity="center"
            android:textSize="10sp"
            tools:text="140"/>

    </RelativeLayout>

</RelativeLayout>