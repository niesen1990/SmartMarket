<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_stroke_no_corner_ripple"
    android:padding="@dimen/global_padding">

    <TextView
        android:id="@+id/tv_status_tag"
        style="@style/TextAppearance.Smart.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dimgray"
        android:textStyle="bold"
        tools:text="提现到支付宝"/>

    <TextView
        android:id="@+id/tv_time"
        style="@style/TextAppearance.Smart.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_status_tag"
        android:layout_marginTop="@dimen/global_padding"
        android:textColor="@color/darkgray"
        tools:text="2016-05-26 09:30"/>

    <TextView
        android:id="@+id/tv_status"
        style="@style/TextAppearance.Smart.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/address"
        tools:text="提现中"/>

    <TextView
        android:id="@+id/tv_count"
        style="@style/TextAppearance.Smart.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_time"
        android:layout_alignParentRight="true"
        android:textColor="@color/dimgray"
        tools:text="1000.00"/>


</RelativeLayout>
