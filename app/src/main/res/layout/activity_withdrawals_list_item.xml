<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_stroke_no_corner_ripple"
    android:padding="@dimen/global_padding">

    <ImageView
        android:id="@+id/tv_zhifubao"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_zhifubao"/>

    <TextView
        android:id="@+id/tv_name"
        style="@style/TextAppearance.Smart.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/global_padding"
        android:layout_marginRight="@dimen/global_padding"
        android:layout_toRightOf="@+id/tv_zhifubao"
        android:maxLines="1"
        android:textStyle="bold"
        tools:text="魅族"/>

    <TextView
        android:id="@+id/tv_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_zhifubao"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="@dimen/global_padding"
        android:layout_marginRight="@dimen/global_padding"
        android:layout_toRightOf="@+id/tv_zhifubao"
        android:maxLines="1"
        android:textColor="@color/address"
        tools:text="niesen918@163.com"/>


</RelativeLayout>
