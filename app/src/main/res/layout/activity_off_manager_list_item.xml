<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_stroke_no_corner">


    <RelativeLayout
        android:id="@+id/rl02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_stroke_no_corner">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="@dimen/global_padding"
            tools:src="@color/line"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_image"
            android:layout_toRightOf="@+id/iv_image"
            android:textStyle="bold"
            tools:text="贝亲套装"/>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/global_padding"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            tools:text="下架"/>

        <TextView
            android:id="@+id/tv_new_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_image"
            android:layout_toRightOf="@+id/iv_image"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            tools:text="2999"/>

        <TextView
            android:id="@+id/tv_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_image"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/global_padding"
            android:layout_toRightOf="@+id/tv_new_price"
            android:background="@drawable/shape_gray_single_line"
            android:gravity="center"
            android:textSize="12sp"
            tools:text="3700"/>


    </RelativeLayout>


    <TextView
        android:id="@+id/tv_operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rl02"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/global_padding"
        android:layout_toLeftOf="@+id/tv_status_01"
        android:padding="@dimen/global_padding"
        android:textStyle="bold"
        android:text="重新上架"/>


</RelativeLayout>