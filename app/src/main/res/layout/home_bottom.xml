<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bottom"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:background="@drawable/shape_white_stroke_no_corner"
    android:orientation="horizontal"
    android:paddingTop="@dimen/half_global_padding">

    <TextView
        android:id="@+id/tv_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@android:drawable/ic_menu_add"
        android:gravity="center"
        android:text="@string/homepager" />

    <TextView
        android:id="@+id/tv_shop"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@android:drawable/ic_menu_add"
        android:gravity="center"
        android:text="@string/homeshop" />

    <TextView
        android:id="@+id/tv_publish"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@android:drawable/ic_menu_add"
        android:gravity="center"
        android:text="@string/homepublish" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@android:drawable/ic_menu_add"
        android:gravity="center"
        android:text="@string/homemessage" />

    <TextView
        android:id="@+id/tv_me"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@android:drawable/ic_menu_add"
        android:gravity="center"
        android:text="@string/homeme" />

</LinearLayout>
